@model Zdrav_I_SIlen.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                <form method="post" asp-controller="Account" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Email">Имейл</label>
                        <input asp-for="Email" class="form-control" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Password">Парола</label>
                        <input asp-for="Password" class="form-control" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input">
                            <label asp-for="RememberMe" class="form-check-label">Запомни ме</label>
                        </div>
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Вход</button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <p>Нямате акаунт? <a asp-controller="Account" asp-action="Register">Регистрирайте се</a></p>
                    <p><a asp-controller="Account" asp-action="ForgotPassword">Забравена парола?</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 