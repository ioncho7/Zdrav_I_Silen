@model Zdrav_I_SIlen.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Възстановяване на парола";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="alert alert-info">
                    <small>Въведете вашия имейл адрес, кода за възстановяване и новата парола.</small>
                </div>

                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Email">Имейл</label>
                        <input asp-for="Email" class="form-control" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ResetCode">Код за възстановяване</label>
                        <input asp-for="ResetCode" class="form-control" required>
                        <span asp-validation-for="ResetCode" class="text-danger"></span>
                        <small class="form-text text-muted">Въведете 6-цифрения код, който получихте.</small>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="NewPassword">Нова парола</label>
                        <input asp-for="NewPassword" class="form-control" required>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword">Потвърди новата парола</label>
                        <input asp-for="ConfirmPassword" class="form-control" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Възстанови парола</button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <p>Нямате код? <a asp-controller="Account" asp-action="ForgotPassword">Заявете нов код</a></p>
                    <p>Спомнихте си паролата? <a asp-controller="Account" asp-action="Login">Влезте</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 