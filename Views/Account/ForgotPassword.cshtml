@model Zdrav_I_SIlen.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забравена парола";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="alert alert-info">
                    <small>Въведете вашия имейл адрес и ще получите код за възстановяване на паролата.</small>
                </div>

                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Email">Имейл</label>
                        <input asp-for="Email" class="form-control" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Изпрати код</button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <p>Спомнихте си паролата? <a asp-controller="Account" asp-action="Login">Влезте</a></p>
                    <p>Нямате акаунт? <a asp-controller="Account" asp-action="Register">Регистрирайте се</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 